{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
    },
    "files": {
      "ignoreUnknown": false,
      "ignore": []
    },
    "organizeImports": {
      "enabled": true,
      "ignore": ["node_modules", ".next", ".vscode"]
    },
    "formatter": {
      "ignore": ["node_modules", ".next", ".vscode"],
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf"
    },
    "linter": {
      "ignore": ["node_modules", ".next", ".vscode"],
      "enabled": true,
      "rules": {
        "recommended": true,
        "nursery": {
          "useSortedClasses": "warn"
        },
        "correctness": {
          "noUnusedImports": "warn"
        }
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "double"
      }
    }
  }